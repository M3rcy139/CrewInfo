<Window x:Class="CrewInfo.Wpf.PilotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор рейса" Height="240" Width="450">
    <Grid>
        <StackPanel>
            <TextBlock Text="Пилоты" HorizontalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="5 10 10 10"/>

            <TextBlock Name="NameTextBlock" Text="Выберите:" FontSize="16" HorizontalAlignment="Center" Margin="0 0 0 5"/>

            <Button x:Name="CrewInfoButton" Content="Получить инф." Width="120" Height="40" HorizontalAlignment="Left"
                    Margin="70 20 0 0" Click="GetButton_Click" Background="White" BorderBrush="Black"/>
            <Button x:Name="SelectSeatsButton" Content="Добавить пилота" Width="120" Height="40" HorizontalAlignment="Right"
                    Margin="0 -40 70 0" Click="AddButton_Click" Background="White" BorderBrush="Black"/>

            <Button Content="Назад" Click="BackButton_Click" Width="120" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                    Margin="0 40 0 0" Background="White" BorderBrush="Black"/>
        </StackPanel>
    </Grid>
</Window>